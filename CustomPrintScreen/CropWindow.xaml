<Window x:Class="CustomPrintScreen.CropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomPrintScreen"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="Kadrowanie">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="525*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <Image x:Name="Bitmap"/>
        <StackPanel Margin="0,4" Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="Anuluj" HorizontalAlignment="Right" Margin="0,0,8,0" Width="56" Click="Button_Click" Height="21"/>
            <Button Content="Zapisz" HorizontalAlignment="Right" Margin="0,0,8,0" Width="56" Height="21"/>
        </StackPanel>

    </Grid>
</Window>
